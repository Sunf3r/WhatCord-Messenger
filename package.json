{
    "name": "whatcord-messenger",
    "version": "0.1.2",
    "author": "Heryson1616",
    "description": "A simple bot that sends messages from a group on WhatsApp to Discord (and vice versa)",
    "main": "build/Main.js",
    "scripts": {
        "postinstall": "npm i --location=global typescript",
        "build": "echo Building Application... && tsc",
        "start": "npm run build && npm run noCompile",
        "noCompile": "echo Starting Application... && node --expose-gc build/Main.js",
        "dev": "echo Starting Application in Development Mode... && node --expose-gc build/Main.js --dev"
    },
    "repository": "git+https://github.com/Heryson1616/WhatCord-Messenger.git",
    "keywords": [
        "WhatsApp",
        "Discord",
        "Eris",
        "TypeScript"
    ],
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/Heryson1616/WhatCord-Messenger/issues"
    },
    "homepage": "https://github.com/Heryson1616/WhatCord-Messenger#readme",
    "dependencies": {
        "axios": "^0.26.1",
        "eris": "^0.16.1",
        "mime-types": "^2.1.35",
        "moment-timezone": "^0.5.34",
        "venom-bot": "^4.0.11"
    },
    "devDependencies": {
        "@types/mime-types": "^2.1.1",
        "@types/node": "^17.0.36",
        "typescript": "^4.7.2"
    }
}
